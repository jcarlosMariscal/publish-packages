{
  "name": "with-tailwind",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "release": "turbo run release",
    "publish:demo-vite": "cd packages/demo-vite && npm run prepare-publish && npm run publish:dist"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.1",
    "prettier": "^3.6.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "release-it": "^19.0.4",
    "turbo": "^2.5.5"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
